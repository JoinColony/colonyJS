{
  "name": "@colony/colony-js",
  "version": "5.3.0-beta.1",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./extras": {
      "import": "./dist/esm/extras/index.js",
      "require": "./dist/cjs/extras/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/index.d.ts"
      ],
      "extras": [
        "dist/types/extras/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "license": "GPL-3.0-only",
  "engines": {
    "node": "^16.14",
    "npm": "^8"
  },
  "scripts": {
    "build": "npm run clean && npm run compile-cjs && npm run compile-esm && npm run compile-types && npm run build-docs",
    "build-contracts": "ts-node -P scripts/tsconfig-scripts.json scripts/build-contracts.ts",
    "build-docs": "typedoc",
    "clean": "rimraf ./dist",
    "compile-cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs",
    "compile-esm": "tsc -p tsconfig.build.json --module es2015 --outDir dist/esm",
    "compile-types": "tsc -p tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types",
    "extract-contract-abis": "ts-node -P scripts/tsconfig-scripts.json scripts/extract-contract-abis.ts",
    "lint": "eslint --ext .ts src scripts",
    "no-git-changes": "./scripts/no-git-changes.sh",
    "release": "npm test && npm run build && release-it",
    "test": "npm run lint && npm run typecheck && jest '[^integration].ts'",
    "test-ci": "npm run lint && npm run typecheck && jest",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@colony/eslint-config-colony": "^9.0.2",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/abstract-provider": "^5.5.1",
    "@typechain/ethers-v5": "^10.0.0",
    "@types/jest": "^27.4.0",
    "@types/lodash-es": "^4.17.6",
    "@types/mkdirp": "^1.0.2",
    "@types/rimraf": "^3.0.2",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "camelcase": "^6.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "ethers": "^5.5.4",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.11",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "prettier": "^2.5.1",
    "release-it": "^15.4.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.9.1",
    "typechain": "^8.0.0",
    "typedoc": "^0.23.13",
    "typedoc-plugin-markdown": "^3.13.5",
    "typescript": "^4.7.4",
    "yargs": "^17.3.1",
    "yarn": "^1.22.17"
  },
  "peerDependencies": {
    "ethers": "^5.5.4"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  }
}
