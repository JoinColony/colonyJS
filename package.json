{
  "name": "@colony/colony-js",
  "version": "v4.1.2",
  "main": "lib/index.js",
  "module": "lib-esm/index.js",
  "files": [
    "lib",
    "lib-esm",
    "docs",
    "LICENSE",
    "package.json",
    "package-lock.json",
    "README.md"
  ],
  "license": "GPL-3.0-only",
  "engines": {
    "node": "^16.14",
    "npm": "^8"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && npm run compile-esm && OUT=lib npm run copy-declarations && OUT=lib-esm npm run copy-declarations && npm run build-docs",
    "build-contracts": "ts-node -P scripts/tsconfig-scripts.json scripts/build-contracts.ts",
    "build-docs": "typedoc --out docs src/index.ts",
    "clean": "rimraf ./lib && rimraf ./lib-esm",
    "compile": "tsc -p tsconfig.build.json",
    "compile-esm": "tsc -p tsconfig.build.json -m es6 --outDir lib-esm",
    "extract-contract-abis": "ts-node -P scripts/tsconfig-scripts.json scripts/extract-contract-abis.ts",
    "lint": "eslint --ext .ts src scripts",
    "prepublishOnly": "npm test && npm run build",
    "test": "npm run lint && npm run typecheck && jest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@colony/eslint-config-colony": "^9.0.2",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/abstract-provider": "^5.5.1",
    "@typechain/ethers-v5": "^9.0.0",
    "@types/jest": "^27.4.0",
    "@types/lodash-es": "^4.17.6",
    "@types/mkdirp": "^1.0.2",
    "@types/rimraf": "^3.0.2",
    "@types/yargs": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "camelcase": "^6.3.0",
    "eslint": "^8.9.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "ethers": "^5.5.4",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.11",
    "jest": "^27.5.1",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typechain": "^7.0.0",
    "typedoc": "^0.22.11",
    "typescript": "^4.5.5",
    "yargs": "^17.3.1",
    "yarn": "^1.22.17"
  },
  "peerDependencies": {
    "ethers": "^5.5.4"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5"
  }
}
