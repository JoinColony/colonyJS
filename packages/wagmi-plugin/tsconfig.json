{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es2022",
    "types": [
      "node"
    ],
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": [
    "./src"
  ]
}
