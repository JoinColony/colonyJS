{
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "camelcase": [
            "error",
            {
                "allow": [
                    ".+_EventFilter$",
                    ".+_EventObject$",
                    ".+__factory"
                ]
            }
        ]
    },
    "overrides": [
        {
            "files": [
                "**/contracts/**/*.ts"
            ],
            "rules": {
                "eslint-comments/disable-enable-pair": "off",
                "eslint-comments/no-unlimited-disable": "off"
            }
        }
    ]
}
