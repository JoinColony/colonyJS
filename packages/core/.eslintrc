{
    "rules": {
        "camelcase": [
            "error",
            {
                "allow": [
                    ".+_EventFilter$",
                    ".+_EventObject$",
                    ".+__factory"
                ]
            }
        ],
        "no-bitwise": "off"
    },
    "overrides": [
        {
            "files": [
                "**/contracts/**/*.ts"
            ],
            "rules": {
                "eslint-comments/disable-enable-pair": "off",
                "eslint-comments/no-unlimited-disable": "off"
            }
        }
    ]
}
